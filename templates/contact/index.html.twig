{% extends 'base.html.twig' %}


{% block title %}Contactez nous!{% endblock %}

{% block body %}
    <section>

            <div class="col-lg-12 align-self-center">
                {{ form_start(form) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}
                {{ form_row(form.idepartement) }}
                {{ form_row(form.save) }}
                {{ form_end(form) }}
            </div>
    </section>
{% endblock %}
